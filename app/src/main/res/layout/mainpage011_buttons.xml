<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232323">

    <ProgressBar
        android:id="@+id/progressBar60"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/main10_11"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/teal_200"
        />



    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageButton
            android:id="@+id/rdbtn1"
            android:layout_width="920px"
            android:layout_height="70dp"
            android:src="@drawable/l2"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="#232323"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:text="@string/mp11_btn1"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:ellipsize="marquee">
        </TextView>
        <ImageButton
            android:id="@+id/rdbtn2"
            android:layout_width="920px"
            android:layout_height="70dp"
            android:src="@drawable/l1"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_margin="70dp"
            android:layout_gravity="center_horizontal"
            android:background="#232323"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="95dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:text="@string/mp11_btn2"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:ellipsize="marquee">
        </TextView>

        <ImageButton
            android:id="@+id/rdbtn3"
            android:layout_width="920px"
            android:layout_height="70dp"
            android:src="@drawable/l1"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_margin="130dp"
            android:layout_gravity="center_horizontal"
            android:background="#232323"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="155dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:text="나가기를 기다린다"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textAlignment="center"
            android:singleLine="true">
        </TextView>



    </FrameLayout>


</LinearLayout>